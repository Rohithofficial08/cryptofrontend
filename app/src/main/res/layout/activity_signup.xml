<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Title Text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:text="Immediately feel the \nease of transacting just by registering"
                android:textColor="#2F1155"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- Username -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cr15bf2f2f2"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="14dp"
                android:layout_marginBottom="16dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/baseline_android_24"
                    app:shapeAppearanceOverlay="@style/cr15" />

                <EditText
                    android:id="@+id/rnzmyrya1j6k"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Username"
                    android:background="@null"
                    android:inputType="text"
                    android:textColor="#828282"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Email -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cr15bf2f2f2"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="14dp"
                android:layout_marginBottom="16dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/baseline_alternate_email_24"
                    app:shapeAppearanceOverlay="@style/cr15" />

                <EditText
                    android:id="@+id/roixfpfnopu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Email"
                    android:background="@null"
                    android:inputType="textEmailAddress"
                    android:textColor="#828282"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Password -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cr15bf2f2f2"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="14dp"
                android:layout_marginBottom="24dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/baseline_admin_panel_settings_24"
                    app:shapeAppearanceOverlay="@style/cr15" />

                <EditText
                    android:id="@+id/editTextPasswordSignup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Password"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:textColor="#828282"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Connect Wallet -->
            <LinearLayout
                android:id="@+id/connectWalletButtonLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cr15b5b259f"
                android:gravity="center"
                android:paddingVertical="16dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connect Wallet"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Register -->
            <LinearLayout
                android:id="@+id/rrrregis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cr15b5b259f"
                android:gravity="center"
                android:paddingVertical="16dp"
                android:layout_marginBottom="24dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Login Text -->
            <TextView
                android:id="@+id/r6kdcs2d66u7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="You have account? Login"
                android:textColor="#BDBDBD"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="32dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
