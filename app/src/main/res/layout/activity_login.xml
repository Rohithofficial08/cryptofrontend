<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/r6r643aspejh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/cr50bffffff"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rijisqr14j8"
                android:textColor="#2F1155"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="110dp"
                android:layout_marginBottom="86dp"
                android:layout_marginHorizontal="33dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:text="Welcome back\nto Mabank Wallet \nare u redy for pay crypto" />

            <LinearLayout
                android:id="@+id/r7oq401z2nd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/cr15bf2f2f2"
                android:paddingVertical="15dp"
                android:paddingHorizontal="20dp"
                android:layout_marginBottom="41dp"
                android:layout_marginHorizontal="32dp"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/rwjyecesuohc"
                    app:shapeAppearanceOverlay="@style/cr15"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="20dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="fitXY" />

                <EditText
                    android:inputType="text"
                    android:hint="Username"
                    android:background="@null"
                    android:id="@+id/r4518u5l8ffv"
                    android:textColor="#828282"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingVertical="2dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/r6licprgjz7g"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/cr15bf2f2f2"
                android:paddingVertical="15dp"
                android:paddingHorizontal="20dp"
                android:layout_marginBottom="55dp"
                android:layout_marginHorizontal="32dp"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/rlex0molg35b"
                    app:shapeAppearanceOverlay="@style/cr15"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="20dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="fitXY" />

                <!-- âœ… Password Input -->
                <EditText
                    android:id="@+id/editTextPassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColor="#828282"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@null"
                    android:paddingVertical="2dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rv1980nfnq1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="86dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/r8qh6yj2f6wc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:background="@drawable/cr15b5b259f"
                    android:paddingVertical="20dp"
                    android:paddingHorizontal="72dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/r780rkysn3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="191dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/rsm7o7ulp1a"
                    android:textColor="#BDBDBD"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Don't have an account yet? Register" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
