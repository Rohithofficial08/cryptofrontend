<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransferActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="18dp">

            <!-- Back arrow and title -->
            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="start"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="24dp"
                android:src="@drawable/arrow_circle_left"
                android:contentDescription="Back"
                android:scaleType="fitCenter"/>

            <!-- Receiver Info -->
            <TextView
                android:id="@+id/userIdReceiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Receiver UserId"
                android:textSize="16sp"
                android:textColor="#6A0DAD"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/walletReceiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Receiver Wallet"
                android:textSize="16sp"
                android:textColor="#6A0DAD"
                android:layout_marginBottom="14dp"/>

            <!-- Amount Text -->
            <TextView
                android:id="@+id/textAmount"
                android:text="$1200"
                android:textColor="#2F1155"
                android:textSize="36sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp" />

            <!-- Coin dropdown selector -->
            <LinearLayout
                android:id="@+id/coinSelectorLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/cr20bf2f2f2"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="33dp"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

            </LinearLayout>

            <!-- Keypad rows -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">
                <TextView android:id="@+id/key1" android:layout_width="90dp" android:layout_height="54dp" android:gravity="center" android:textSize="24sp" android:textColor="#363853" android:textStyle="bold" android:text="1"/>
                <TextView android:id="@+id/key2" android:layout_width="90dp" android:layout_height="54dp" android:gravity="center" android:textSize="24sp" android:textColor="#363853" android:textStyle="bold" android:text="2"/>
                <TextView android:id="@+id/key3" android:layout_width="90dp" android:layout_height="54dp" android:gravity="center" android:textSize="24sp" android:textColor="#363853" android:textStyle="bold" android:text="3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">
                <TextView android:id="@+id/key4" android:layout_width="90dp" android:layout_height="54dp" android:gravity="center" android:textSize="24sp" android:textColor="#363853" android:textStyle="bold" android:text="4"/>
                <TextView android:id="@+id/key5" android:layout_width="90dp" android:layout_height="54dp" android:gravity="center" android:textSize="24sp" android:textColor="#363853" android:textStyle="bold" android:text="5"/>
                <TextView android:id="@+id/key6" android:layout_width="90dp" android:layout_height="54dp" android:gravity="center" android:textSize="24sp" android:textColor="#363853" android:textStyle="bold" android:text="6"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">
                <TextView android:id="@+id/key7" android:layout_width="90dp" android:layout_height="54dp" android:gravity="center" android:textSize="24sp" android:textColor="#363853" android:textStyle="bold" android:text="7"/>
                <TextView android:id="@+id/key8" android:layout_width="90dp" android:layout_height="54dp" android:gravity="center" android:textSize="24sp" android:textColor="#363853" android:textStyle="bold" android:text="8"/>
                <TextView android:id="@+id/key9" android:layout_width="90dp" android:layout_height="54dp" android:gravity="center" android:textSize="24sp" android:textColor="#363853" android:textStyle="bold" android:text="9"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="30dp">
                <TextView android:id="@+id/key00" android:layout_width="90dp" android:layout_height="54dp" android:gravity="center" android:textSize="24sp" android:textColor="#363853" android:textStyle="bold" android:text="00"/>
                <TextView android:id="@+id/key0" android:layout_width="90dp" android:layout_height="54dp" android:gravity="center" android:textSize="24sp" android:textColor="#363853" android:textStyle="bold" android:text="0"/>
                <ImageView
                    android:id="@+id/keyDelete"
                    android:layout_width="90dp"
                    android:layout_height="54dp"
                    android:gravity="center"
                    android:src="@drawable/ic_backspace"
                    android:contentDescription="Delete"/>
            </LinearLayout>

            <!-- Transfer Button -->
            <Button
                android:id="@+id/transferBtn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="34dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_coin_background"
                android:backgroundTint="#6A0DAD"
                android:text="Transfer"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>